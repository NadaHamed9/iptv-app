<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/exoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:resize_mode="fill"
        app:keep_content_on_player_reset="true"
        app:shutter_background_color="@android:color/transparent" />

    <TextView
        android:id="@+id/channelOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel"
        android:textSize="22sp"
        android:padding="14dp"
        android:background="#AA000000"
        android:textColor="#FFFFFF"
        android:layout_margin="30dp"
        android:layout_gravity="top|start"
        android:visibility="gone"/>

    <View
        android:id="@+id/guideOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/sideGuidePanel"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:background="#1A1A1A"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV GUIDE"
            android:textColor="#00E5FF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/guideListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:scrollbars="none"
            android:choiceMode="singleChoice"
            android:descendantFocusability="beforeDescendants"
            android:nextFocusDown="@id/guideListView" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/miniInfoBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="#DD000000"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/miniChannelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00E5FF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#00E5FF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/miniChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/miniChannelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#88FFFFFF"
                android:textSize="14sp"
                android:text="Live â€¢ UDP Stream" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>