<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotel_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_back"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOVIES"
        android:textColor="#00E5FF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_marginStart="100dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/movieGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:alignmentMode="alignMargins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleMovies">

        <include layout="@layout/item_movie_poster" android:id="@+id/movie1"
            android:layout_width="200dp" android:layout_height="300dp" android:layout_margin="15dp" />

        <include layout="@layout/item_movie_poster" android:id="@+id/movie2"
            android:layout_width="200dp" android:layout_height="300dp" android:layout_margin="15dp" />

        <include layout="@layout/item_movie_poster" android:id="@+id/movie3"
            android:layout_width="200dp" android:layout_height="300dp" android:layout_margin="15dp" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>